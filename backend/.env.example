NODE_ENV=development
PORT=3001

# Database
# IMPORTANT: Replace <GENERATE_STRONG_PASSWORD_HERE> with a strong password
DATABASE_URL="postgresql://user:<GENERATE_STRONG_PASSWORD_HERE>@localhost:5432/defi_credit_score"

# Frontend URL for CORS
# In production, this should be your actual frontend domain
FRONTEND_URL=http://localhost:3000

# Stacks Blockchain
STACKS_API_URL=https://api.testnet.hiro.so
STACKS_API_WS_URL=wss://api.testnet.hiro.so
NETWORK=testnet

# Contract Addresses (update after deployment)
CREDIT_SCORE_CONTRACT=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM.credit-score
LOAN_MANAGER_CONTRACT=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM.loan-manager
AGENT_REGISTRY_CONTRACT=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM.agent-registry
TRANSACTION_HISTORY_CONTRACT=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM.transaction-history

# API Keys (for production)
HIRO_API_KEY=<YOUR_HIRO_API_KEY_HERE>

# Security
# Generate a 64-character hex string for encryption: openssl rand -hex 32
ENCRYPTION_KEY=<GENERATE_64_CHAR_HEX_KEY_HERE>

# Generate a strong secret for webhook verification: openssl rand -hex 32
WEBHOOK_SECRET=<GENERATE_64_CHAR_HEX_SECRET_HERE>

# JWT Secret (if using JWT tokens)
JWT_SECRET=<GENERATE_STRONG_JWT_SECRET_HERE>

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
AUDIT_LOG_ENABLED=true
